-- ~/.config/nvim/lua/plugins/navigation.lua
return {
	{
		"phaazon/hop.nvim",
		branch = "v2",
		config = function()
			require("hop").setup({ keys = "etovxqpdygfblzhckisuran" })

			local hop = require("hop")
			local directions = require("hop.hint").HintDirection

			-- Quick HTML/CSS jump keymaps
			vim.keymap.set("n", "<leader>ac", ":edit styles.css<CR>", { desc = "Go to CSS file" })
			vim.keymap.set("n", "<leader>ah", ":edit index.html<CR>", { desc = "Go to HTML file" })

			-- Hop to single char
			vim.keymap.set("n", "<leader>jc", function()
				hop.hint_char1()
			end, { desc = "Hop to single char" })

			-- Hop to word
			vim.keymap.set("n", "<leader>jw", function()
				hop.hint_words()
			end, { desc = "Hop to word" })

			-- Hop to line
			vim.keymap.set("n", "<leader>jl", function()
				hop.hint_lines()
			end, { desc = "Hop to line" })

			-- Hop by pattern
			vim.keymap.set("n", "<leader>jp", function()
				hop.hint_patterns()
			end, { desc = "Hop by pattern" })

			-- Quick hops (moved from <leader><leader> to <leader>hX) ---
			vim.keymap.set("n", "<leader>hc", function()
				hop.hint_char1()
			end, { desc = "Quick hop to char" })

			vim.keymap.set("n", "<leader>hw", function()
				hop.hint_words()
			end, { desc = "Quick hop to word" })

			vim.keymap.set("n", "<leader>hl", function()
				hop.hint_lines()
			end, { desc = "Quick hop to line" })

			-- Extra: hop anywhere / backward / pattern
			vim.keymap.set("n", "<leader>ha", function()
				hop.hint_anywhere()
			end, { desc = "Hop anywhere" })

			vim.keymap.set("n", "<leader>hb", function()
				hop.hint_words({ direction = directions.BEFORE_CURSOR })
			end, { desc = "Hop word backward" })

			vim.keymap.set("n", "<leader>hp", function()
				hop.hint_patterns()
			end, { desc = "Hop by pattern" })
		end,
	},
}
