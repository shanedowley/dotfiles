-- ~/.config/nvim/lua/plugins/navigation.lua
-- Navigation enhancements: hop.nvim

return {
	{
		"smoka7/hop.nvim",
		version = "*", -- latest stable release
		event = "VeryLazy", -- lazy-load on demand
		config = function()
			local hop = require("hop")
			hop.setup()

			local directions = require("hop.hint").HintDirection

			-- Easy word hopping
			vim.keymap.set("n", "<leader>jw", function()
				hop.hint_words()
			end, { desc = "Hop to word" })

			-- Hop to a single character (anywhere on screen)
			vim.keymap.set("n", "<leader>jc", function()
				hop.hint_char1()
			end, { desc = "Hop to single char" })

			-- Hop to a line
			vim.keymap.set("n", "<leader>jl", function()
				hop.hint_lines()
			end, { desc = "Hop to line" })

			-- Hop to word, before cursor
			vim.keymap.set("n", "<leader>hb", function()
				hop.hint_words({ direction = directions.BEFORE_CURSOR })
			end, { desc = "Hop word before cursor" })

			-- Hop to word, after cursor
			vim.keymap.set("n", "<leader>ha", function()
				hop.hint_words({ direction = directions.AFTER_CURSOR })
			end, { desc = "Hop word after cursor" })

			-- Hop pattern (search-like)
			vim.keymap.set("n", "<leader>hp", function()
				hop.hint_patterns()
			end, { desc = "Hop by pattern" })
		end,
	},
}
