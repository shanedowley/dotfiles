{
  "title": "CapsLock: Hyper when held, Ctrl-a when tapped (tmux prefix)",
  "rules": [
    {
      "description": "CapsLock -> Hyper (hold), Ctrl-a (tap)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_control", "left_option", "left_command"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "a",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
    }
  ]
}
